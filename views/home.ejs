         <div class="col-md-9" id="left">
            <h1 class="display-4">Weclome <%=user.studentinfo.fname%> to Student Portal Home</h1>
         </div>
         <div class="col-md-3 p-0" id="right">
            <h2></h2>
             <button class="btn btn-outline-dark ml-5 my-3" id="myBtn" onclick="window.location.href='/main'">Log OUT</button>
         </div>
      </div>
      <div class="row">
         <div class="col pr-1">
           <div class="std">
             <div class="card2">
               <p style="font-size: large;"><b><i><u>Student Information</u></i></b></p>
               <p>
               <table style="width:100%">
               <tr>
                 <th>Firstname</th>
                 <td><%=user.studentinfo.fname%></td>
                 <th>Lastname</th>
                 <td><%=user.studentinfo.lname%></td>
               </tr>
               <tr>
                 <th>Registration Number </th>
                 <td><%=user.studentinfo.rno%></td>
               </tr>
               <tr>
                 <th>Phone Number </th>
                 <td><%=user.studentinfo.pno%></td>
               </tr>
               <tr>
                 <th>Email ID </th>
                 <td><%=user.studentinfo.email%></td>
               </tr>
               <tr>
                 <th>Stream </th>
                 <td><%=user.studentinfo.stream%></td>
                 <th>Current Sem </th>
                 <td><%=user.studentinfo.csem%></td>
                 <th>CGPA </th>
                 <td><%=user.studentinfo.cgpa%></td>

                </tr>

                 </table></p>

             </div>
